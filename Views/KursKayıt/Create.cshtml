@{
}

<div class="orta-div">

    <form asp-controller="KursKayıt" asp-action="Create" method="post">
        <h1 style="text-align :center;">Kurs Kayıt </h1>
        <div class="mb-3">
            <b> <label asp-for="OgrenciId" class="form-label">Ogrenci</label></b>
            <select asp-for ="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control">
                <option value=""> Seçiniz   </option>
            </select>
           

        </div>
        <div class="mb-3">
            <b><label asp-for="KursId" class="form-label">Kurs</label></b>
            <select asp-for ="KursId" asp-items="ViewBag.Kurslar" class="form-control">
                <option value=""> Seçiniz   </option>
            </select>
           
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>

<style>
    .orta-div {
        width: 50%; /* Sayfanın genişliğinin yarısı kadar genişlik */
        margin: 27%; /* Dikey hizalama için margin kullanarak otomatik olarak ortalamak */
        padding: 20px; /* İçerik ile kenar arasında boşluk bırakmak için */
        border: 1px solid #ccc; /* Kenarlık eklemek */
        border-radius: 10px; /* Kenar yuvarlaklığı */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Gölge efekti */
        background-color: #fff; /* Arka plan rengi */
    }
